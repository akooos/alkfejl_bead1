<div class="page-header">
    <h1>Recept</h1>
</div>
{{#each messages}}
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
        <label for="name" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="name" name="name" value="{{recipe.name}}">
                {{#if validationErrors.name}}
                    <span class="help-block">{{validationErrors.name.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="headimg" class="col-lg-2 control-label">Kép URL</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="headimg" name="headimg" value="{{recipe.headimg}}" >
            </div>
        </div>
        <div class="form-group {{#if validationErrors.description}}has-error{{/if}}">
        <label for="description" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control"  style="height:200px;" type="text" id="description" name="description" >{{recipe.description}}</textarea>
                  {{#if validationErrors.description}}
                    <span class="help-block">{{validationErrors.description.msg}}</span>
                  {{/if}}
            </div>
        </div>        
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Visszaállítás</button>
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
        <input type="hidden" name="id" value="{{recipe.id}}">
    </fieldset>
</form>