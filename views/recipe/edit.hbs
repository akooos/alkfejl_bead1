<div class="page-header">
    <h1>Recept</h1>
</div>
{{#each messages}}
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="rcpname" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="rcpname" name="rcpname" value="{{rcpname}}">
            </div>
        </div>
        <div class="form-group">
            <label for="rcpimgurl" class="col-lg-2 control-label">Kép URL</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="rcpimgurl" name="rcpimgurl" value="{{rcpimgurl}}" >
            </div>
        </div>
        <div class="form-group">
        <label for="rcpdesc" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" type="text" id="rcpdesc" name="rcpdesc" >{{rcpdesc}}</textarea>
            </div>
        </div>        
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Visszaállítás</button>
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>