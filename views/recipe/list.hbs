{{#each messages}}
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Receptjeim</h1>
</div>

<ul class="list-group">
    {{#each recipes}}
    <li class="list-group-item">
        <div style="float:right; height:100px; width:100px">
       <img style="float:right;   height: 100%;
   width: 100%;" src="{{headimg}}" /></div>
       <h2> {{name}} </h2>
       <p> {{description}} </p>
    </li>
    {{/each}}
</ul>



<p><a href="/recipes/new" class="btn btn-default">Új recept felvétele</a></p>