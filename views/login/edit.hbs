<div class="page-header">
    <h1>{{user.username}} adatai</h1>
</div>
{{#each messages}}
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{#if validationErrors.surname}}has-error{{/if}}">
            <label for="surname" class="col-lg-2 control-label">Vezetéknév</label>
            <div class="col-lg-10">
            <input class="form-control" type="text" id="surname" name="surname" value="{{user.surname}}">
            {{#if validationErrors.surname}}
            <span class="help-block">{{validationErrors.surname.msg}}</span>
            {{/if}}
            </div>
        </div>
        <div class="form-group {{#if validationErrors.forename}}has-error{{/if}}">
            <label for="forename" class="col-lg-2 control-label">Keresztnév</label>
            <div class="col-lg-10">
            <input class="form-control" type="text" id="forename" name="forename" value="{{user.forename}}" >
                {{#if validationErrors.forename}}
                    <span class="help-block">{{validationErrors.forename.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
            <label for="email" class="col-lg-2 control-label">E-mail</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="email" name="email" value="{{user.email}}">
            {{#if validationErrors.email}}
                    <span class="help-block">{{validationErrors.email.msg}}</span>
            {{/if}}
            </div>
        </div>
        <div class="form-group">
            <label for="avatar" class="col-lg-2 control-label">Avatar URL</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="avatar" name="avatar"  value="{{user.avatar}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Visszaállítás</button>
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>