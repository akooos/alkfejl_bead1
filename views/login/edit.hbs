<div class="page-header">
    <h1>Felhasználó adataid</h1>
</div>
{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="surname" class="col-lg-2 control-label">Vezetéknév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="surname" name="surname" value="{{sn}}">
            </div>
        </div>
        <div class="form-group">
            <label for="forename" class="col-lg-2 control-label">Keresztnév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="forename" name="forename" value="{{cn}}" >
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-lg-2 control-label">E-mail</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="email" name="email" value="{{email}}">
            </div>
        </div>
        <div class="form-group">
        <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="username" name="username"  value="{{un}}">
            </div>
        </div>        
        <div class="form-group">
            <label for="avatar" class="col-lg-2 control-label">Avatar URL</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="avatar" name="avatar"  value="{{avatarurl}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Visszaállítás</button>
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>