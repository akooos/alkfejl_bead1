{{#each messages}}
<div class="alert alert-dismissible alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Felhasználók</h1>
</div>
    <table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Felhasználónév</th>
            <th>Vezetéknév</th>
            <th>Keresztnév</th>
            <th>E-mail</th>
            <th></th>
        </tr>   
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{username}}</td>
            <td>{{surname}}</td>
            <td>{{forename}}</td>
            <td><a href="mailto:{{email}}">{{email}}</a></td>
            <td><a href="/user/del?id={{id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
    
    
